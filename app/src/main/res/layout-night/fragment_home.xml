<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorDark"
    tools:context=".view.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/top_bar_home_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/date_home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Monday, September 13, 2021"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/settings_home_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_bg_dark"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/settings_button_description"
                android:foreground="@drawable/ic_filter_state"
                android:padding="6dp"
                android:src="@drawable/ic_settings_24_dark" />

        </RelativeLayout>

        <TextView
            android:id="@+id/home_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_bar_home_rv"
            android:layout_alignStart="@id/top_bar_home_rv"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="@string/home_top_text"
            android:textColor="@color/white"
            android:textSize="24sp" />


        <LinearLayout
            android:id="@+id/search_box_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_top_tv"
            android:layout_alignStart="@id/home_top_tv"
            android:layout_alignEnd="@id/top_bar_home_rv"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/search_box_bg_dark"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2dp"
                android:contentDescription="@string/search_icon_description"
                android:layout_weight="1"
                android:src="@drawable/ic_search_24_dark" />

            <EditText
                android:id="@+id/search_box_et_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_weight="5"
                android:background="@android:color/transparent"
                android:fontFamily="@font/quicksand_semi_bold"
                android:hint="@string/search_box_hint_text"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="15sp"
                android:autofillHints="name"
                android:inputType="text" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_box_home"
            android:layout_alignStart="@id/top_bar_home_rv"
            android:layout_alignEnd="@id/top_bar_home_rv"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/plant_list_item" />

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>