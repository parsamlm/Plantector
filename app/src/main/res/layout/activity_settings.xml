<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsActivity"
    android:background="@color/backgroundColor">

    <ImageView
        android:id="@+id/back_btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_bg_white"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ic_filter_state"
        android:padding="3dp"
        android:src="@drawable/ic_back_24" />

    <TextView
        android:id="@+id/settings_tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_btn_settings"
        android:layout_alignStart="@id/back_btn_settings"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_semi_bold"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/dark_mode_layout_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_tv_settings"
        android:layout_alignStart="@id/settings_tv_settings"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp">

        <ImageView
            android:id="@+id/dark_mode_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bg_green"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ic_filter_state"
            android:padding="3dp"
            android:src="@drawable/ic_dark_mode_24dp" />

        <TextView
            android:id="@+id/dark_mode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_mode"
            android:fontFamily="@font/quicksand_semi_bold"
            android:layout_toEndOf="@id/dark_mode_iv"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:layout_alignTop="@id/dark_mode_iv"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/help_txt_dark_mode_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_text_dark_mode_settings"
            android:textColor="@color/gray"
            android:layout_alignStart="@id/dark_mode_tv"
            android:layout_below="@id/dark_mode_tv"
            android:fontFamily="@font/quicksand_semi_bold"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/dark_mode_switch_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/dark_mode_layout_settings"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="15dp"/>


</RelativeLayout>