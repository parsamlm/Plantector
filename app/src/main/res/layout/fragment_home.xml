<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/backgroundColor">


    <RelativeLayout
        android:id="@+id/top_bar_home_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/date_home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Monday, September 13, 2021" />

        <ImageView
            android:id="@+id/settings_home_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bg"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ic_filter_state"
            android:padding="6dp"
            android:src="@drawable/ic_settings_24" />

    </RelativeLayout>

    <TextView
        android:id="@+id/home_top_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar_home_rv"
        android:layout_alignStart="@id/top_bar_home_rv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_semi_bold"
        android:text="@string/home_top_text"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <LinearLayout
        android:id="@+id/search_box_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_top_tv"
        android:layout_marginTop="35dp"
        android:layout_alignStart="@id/home_top_tv"
        android:layout_alignEnd="@id/top_bar_home_rv"
        android:layout_marginEnd="20dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/search_box_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_24"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:hint="@string/search_box_hint_text"
            android:textSize="15sp"
            android:maxLines="1"
            android:maxLength="15"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/quicksand_semi_bold"
            android:background="@android:color/transparent"
            android:layout_weight="5" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_box_home"
        android:layout_alignStart="@id/top_bar_home_rv"
        android:layout_alignEnd="@id/top_bar_home_rv"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/plant_list_item" />





</RelativeLayout>