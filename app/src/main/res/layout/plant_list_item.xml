<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_margin="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/lowOpacityColorPrimary">

    <LinearLayout
        android:id="@+id/item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_iv"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/item_description"
            android:scaleType="centerCrop"
            tools:src="@drawable/item1" />

        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/quicksand_semi_bold"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:text="Daffodil" />

        <TextView
            android:id="@+id/item_family_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/quicksand_semi_bold"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:text="Amarylidaceae" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_more_info_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:gravity="start|center_vertical"
            android:text="@string/more_information_text"
            android:textAllCaps="false"
            android:textSize="12sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>